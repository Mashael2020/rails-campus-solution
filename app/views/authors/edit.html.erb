<h1> Edit Author </h1>
<%= form_for @author, url: {action: "update"} do |f| %>
    <%= f.label :first_name%>
    <%= f.text_field :first_name %>

    <%= f.label :last_name%>
    <%= f.text_field :last_name %>

    <%= f.label :location%>
    <%= f.text_field :location %>

    <%= f.label :nickname%>
    <%= f.text_field :nickname %>

    <%= f.label :hometown%>
    <%= f.text_field :hometown %>

    <%= f.label :age%>
    <%= f.text_field :age %>
    
    <%= f.submit "Save" %>
<% end %>